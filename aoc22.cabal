cabal-version:      3.0
name:               aoc22
version:            0.1.0.0
license:            NONE
build-type:         Simple
extra-doc-files:    CHANGELOG.md

common base
    build-depends:    base ^>=4.17.0.0
    default-language: Haskell2010
    ghc-options:      -Wall -O2
    hs-source-dirs:   haskell

executable day1
