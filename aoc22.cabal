    main-is:          Day1.hs
    build-depends:    split

executable day2
    import:           base
    main-is:          Day2.hs

executable day3
    import:           base
    main-is:          Day3.hs
    build-depends:    split

executable day4
    import:           base
    main-is:          Day4.hs
    build-depends:    parsec

executable day5
    import:           base
    main-is:          Day5.hs
    build-depends:    parsec, vector

executable day6
    import:           base
    main-is:          Day6.hs

executable day7
    import:           base
    main-is:          Day7.hs
    build-depends:    mtl, recursion-schemes, parsec

executable day8
    import:           base
    main-is:          Day8.hs
    build-depends:    parsec, vector

executable day9
    import:           base
    main-is:          Day9.hs
